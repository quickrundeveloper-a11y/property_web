rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isChatParticipant(chatId) {
      return signedIn() && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
    }

    match /chats/{chatId} {
      allow read: if signedIn() && (request.auth.uid in resource.data.participants);
      allow create: if signedIn()
        && (request.auth.uid in request.resource.data.participants)
        && (request.resource.data.participants.size() == 2)
        && (request.resource.data.buyerId in request.resource.data.participants)
        && (request.resource.data.sellerId in request.resource.data.participants);
      allow update: if signedIn() && (request.auth.uid in resource.data.participants);
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId)
          && (request.resource.data.senderId == request.auth.uid)
          && (request.resource.data.receiverId in get(/databases/$(database)/documents/chats/$(chatId)).data.participants)
          && (request.resource.data.receiverId != request.auth.uid);
        allow update: if isChatParticipant(chatId)
          && (request.auth.uid == resource.data.receiverId)
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['seen'])
          && (resource.data.seen == false)
          && (request.resource.data.seen == true);
        allow delete: if false;
      }
    }

    match /chat_messages/{document} {
      allow read, write: if false;
    }
    
    // Allow read/write access to messages collection
    match /messages/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to properties collection
    match /properties/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to favorites collection
    match /favorites/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to property_All collection (used by app)
    match /property_All/{document=**} {
      allow read, write: if true;
    }
    
    // Allow read/write access to sms collection
    match /sms/{document} {
      allow read, write: if true;
    }
  }
}
